<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
            android:id="@+id/splash_image_top"
            android:layout_width="418dp"
            android:layout_height="99dp"
            android:src="@drawable/splash_screen_top"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageView
        android:id="@+id/splash_image_bottom"
        android:layout_width="match_parent"
        android:layout_height="212.85dp"
        android:layout_weight="1"
        android:src="@drawable/splash_screen_bottom" />

    <!-- Add any other views or elements as per your design -->
  <!-- android:layout_marginLeft="71dp" -->
            <!-- android:layout_marginTop="268dp" -->
</LinearLayout>